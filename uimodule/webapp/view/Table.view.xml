<mvc:View
	controllerName="com.myorg.myUI5App.controller.Table"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
	xmlns:t="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core"
  xmlns:m="sap.m"
    height="100%">
	<Page id="page"
		showHeader="true"
		enableScrolling="true"
		class="sapUiContentPadding">
  	<content>

<t:TreeTable id="TreeTableBasic"
                                rows="{path:'/Jobs', parameters: {arrayNames:['batches']}}"
                                selectionMode="Single"
                                ariaLabelledBy="title"
                                cellClick="showBatchData">
                                <t:extension>
                                    <m:OverflowToolbar style="Clear">
                                        <m:Title id="title" text="Invoice Object Recommendation Dataset"/>
                                        <m:ToolbarSpacer/>
<m:Button icon="sap-icon://refresh" text="" type="Transparent" press="onPress" ariaLabelledBy="editButtonLabel"/>
                                        <m:Button text="Collapse all" press="onCollapseAll"/>
                                    </m:OverflowToolbar>
                                </t:extension>
                                <t:columns>
                                    <t:Column width="20rem">
                                        <m:Label text="Job Id"/>
                                        <t:template>
                                            <m:Text text="{id}" wrapping="false"/>

                                        </t:template>
                                    </t:Column>
                                    <t:Column width="13rem">
                                        <m:Label text="Batch Id"/>
                                        <t:template>
                                             <m:Link text="{BatchId}" emphasized="true" press="showBatchData"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="9rem">
                                        <m:Label text="Object Store Reference"/>
                                        <t:template>
                                            <m:Link text="{ObjectStoreRef}" emphasized="false" press="exportBatchData"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="File Name"/>
                                        <t:template>
                                            <m:Text text="{FileName}" wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="Created On"/>
                                        <t:template>
                                            <m:Text text="{CreatedOn}" wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="CreatedBy"/>
                                        <t:template>
                                            <m:Text text="{CreatedBy}" wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="FileSize"/>
                                        <t:template>
                                            <m:Text text="{FileSize}" wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="Used In Training"/>
                                        <t:template>
                                            <m:Text text="{UsedInTraining}" wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="Trained On"/>
                                        <t:template>
                                            <m:Text text="{TrainedOn}" wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="Training Parameters"/>
                                        <t:template>
                                            <m:Text text="{TrainingParameters}" wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                    <t:Column width="1rem">
                                        <m:Label text=""/>
                                        <t:template>
                                            <!-- <m:Text text="{TrainingStatus}" wrapping="false"/> -->
<m:Button icon="sap-icon://refresh" text="" type="Transparent" press="onPress" ariaLabelledBy="editButtonLabel"/>


                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="Training Status"/>
                                        <t:template>
                                            <m:Text text="{TrainingStatus}" wrapping="false"/>


                                        </t:template>
                                    </t:Column>
                                    <t:Column width="11rem">
                                        <m:Label text="Comments"/>
                                        <t:template>
                                            <m:Text text="{Comments}" wrapping="false"/>
                                        </t:template>
                                    </t:Column>
                                </t:columns>

                            </t:TreeTable>

		</content>

	</Page>
</mvc:View>
